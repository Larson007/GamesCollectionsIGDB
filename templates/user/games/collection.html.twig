{% extends 'base.html.twig' %}

{% block title %}
	{{controller_name}}
{% endblock %}

{% block body %}
	<div class="body-content">
		<div class="container">

			<div class="page-title">
				<h1 class="page-title">Votre Collection de jeux</h1>
			</div>
			<div class="user-game_filter">
			
				<div class="filter_collections">
					<button id="filterCollection" data-collections="{{ collectionIds|join(', ') }}">Collections</button>
					<button id="filterLikes" data-likes="{{ likeIds|join(', ') }}">likes</button>
					<button id="filterWishes" data-wishes="{{ wishIds|join(', ') }}">Liste de souhaites</button>
				</div>
				<div class="filter_platforms"></div>
			</div>

			<div class="user-game-template">
			{% include 'user/games/_collection_games.html.twig' %}


			</div>
		</div>
	</div>
{% endblock %}
