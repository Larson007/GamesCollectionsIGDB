{% extends 'base.html.twig' %}

{% block title %}Sortie récente populaire
{% endblock %}

{% block body %}
	<div class="body-content">
		<div class="popular-game">
			<div class="container">
				<div class="page-title">
					<h1 class="popular-title">Sortie récente populaire <span>(Depuis le {{ date }})</span></h1>
				</div>

				<div class="popular-platforms">
					<button id="popular-all" class="popular-platforms-filter"><img src="{{asset('build/images/icons/platforms/all_platforms.svg')}}" alt=""><span>Toutes les platformes</span>
					</button>
					<button id="popular-pc" class="popular-platforms-filter"><img src="{{asset('build/images/icons/platforms/PC_horizontal.svg')}}" alt=""></button>
					<button id="popular-playstation" class="popular-platforms-filter"><img src="{{asset('build/images/icons/platforms/PS5_horizontal.svg')}}" alt=""></button>
					<button id="popular-xbox" class="popular-platforms-filter"><img src="{{asset('build/images/icons/platforms/Xbox_Series_horizontal.svg')}}" alt=""></button>
					<button id="popular-nintendo" class="popular-platforms-filter"><img src="{{asset('build/images/icons/platforms/Nintendo_Switch_horizontal.svg')}}" alt=""></button>

				</div>
				<div class="popular-game-template">
					{% include 'game/popular/_last_popular_games_platforms.html.twig' %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
