													<span class="score score-null">N/A</span>
												</p>
											{% endif %}
										</div>
									</div>
								</div>

							</div>
						</div>
					{% endfor %}
				</div>
				<h2>Les plus attendus</h2>
				<div class="last_tested_games-template">
					{% for game in hypesGames %}
						<div class="last_tested_games">
							{% if game.cover.url is defined %}
								<img class="game_card-cover" src="{{game.cover.url}}" alt="cover de {{game.name}}">
							{% else %}
								<img class="game_card-cover" src="{{asset('build/images/placeholder.jpg')}}" alt="cover de {{game.name}}">
							{% endif %}
							{% if game.category is defined and game.category != 'jeu de base' %}
								<div class="game_card-category">
									<p>{{game.category}}</p>
								</div>
							{% endif %}
							<div class="game_card-body">
								{% if game.cover.url is not defined %}
									<div class="game_card-name">
										<h3>{{game.name}}</h3>
									</div>
								{% endif %}
								<div class="game_card-collections">
									<button class="collection_button collection-position {{ game.id in collectionIds ? 'remove-collection' : 'add-collection' }}" data-gameid={{game.id}}>
										<div class="pophover pophover-collection">Collection</div>
										<svg height="800px" width="800px" version="1.1" class="collection_icon icon-collection" xmlns="http://www.w3.org/2000/svg" xmlns:xlink="http://www.w3.org/1999/xlink" viewbox="0 0 32 32" xml:space="preserve">
